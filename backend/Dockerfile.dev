FROM node:18-alpine

# Instalar git para clone de repositórios
RUN apk add --no-cache git

WORKDIR /app

# Instalar dependências
COPY package*.json ./
RUN npm ci && npm cache clean --force

# Copiar código fonte
COPY . .

# Build da aplicação
RUN npm run build

# Expor porta
EXPOSE 3001

# Comando padrão (será sobrescrito pelo docker-compose)
CMD ["node", "dist/src/main.js"]