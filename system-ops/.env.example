# NetPilot System Operations - Environment Configuration

# Application Settings
APP_NAME="NetPilot System Operations"
PORT=8001
DEBUG=false
LOG_LEVEL=INFO

# Integration with NestJS Backend
NESTJS_API_URL="http://localhost:3001"
NESTJS_API_KEY=""
CALLBACK_TOKEN="netpilot-system-ops-callback-token"

# System Paths
NGINX_SITES_AVAILABLE="/etc/nginx/sites-available"
NGINX_SITES_ENABLED="/etc/nginx/sites-enabled"
NGINX_CONFIG_PATH="/etc/nginx/nginx.conf"
NGINX_LOG_PATH="/var/log/nginx"

# SSL Configuration
SSL_CERTS_PATH="/etc/ssl/netpilot"
ACME_CHALLENGE_PATH="/var/www/certbot"
LETSENCRYPT_CONFIG_PATH="/etc/letsencrypt"

# Traefik Configuration
TRAEFIK_CONFIG_PATH="/etc/traefik/dynamic.yml"
TRAEFIK_STATIC_CONFIG="/etc/traefik/traefik.yml"

# Redis Configuration (for job queues)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=1

# Security Settings
ALLOWED_COMMANDS="nginx,systemctl,certbot,ufw,iptables"
RESTRICTED_PATHS="/etc,/var,/usr"
MAX_COMMAND_TIMEOUT=300

# System Monitoring
SYSTEM_ALERT_THRESHOLD_CPU=80
SYSTEM_ALERT_THRESHOLD_MEMORY=85
SYSTEM_ALERT_THRESHOLD_DISK=90

# Backup Settings
BACKUP_PATH="/var/backups/netpilot"
BACKUP_RETENTION_DAYS=30

# Logging
LOG_FILE_PATH="/var/log/netpilot-system-ops.log"
AUDIT_LOG_PATH="/var/log/netpilot-audit.log"