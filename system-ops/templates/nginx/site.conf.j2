# Generated configuration for {{ domain.name }}
# Generated at: {{ generation_time }}
# Domain ID: {{ domain.id }}

{% if domain.forceHttps %}
# HTTP to HTTPS redirect
server {
    listen 80;
    server_name {{ domain.name }};
    return 301 https://$server_name$request_uri;
}
{% endif %}

# Main server block
server {
    {% if domain.forceHttps %}
    listen 443 ssl http2;
    {% else %}
    listen 80;
    {% endif %}
    server_name {{ domain.name }};

    {% if domain.blockExternalAccess %}
    # Block external access
    allow 127.0.0.1;
    allow 10.0.0.0/8;
    allow 172.16.0.0/12;
    allow 192.168.0.0/16;
    deny all;
    {% endif %}

    {% if domain.forceHttps %}
    # SSL configuration
    ssl_certificate /etc/ssl/certs/{{ domain.name }}.crt;
    ssl_certificate_key /etc/ssl/private/{{ domain.name }}.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    {% endif %}

    # Access and error logs
    access_log /var/log/nginx/{{ domain.name }}_access.log;
    error_log /var/log/nginx/{{ domain.name }}_error.log;

    {% if domain.enableWwwRedirect %}
    # WWW redirect
    if ($host = 'www.{{ domain.name }}') {
        return 301 $scheme://{{ domain.name }}$request_uri;
    }
    {% endif %}

    {% for rule in proxy_rules %}
    # Proxy rule: {{ rule.description or rule.sourcePath }}
    # Priority: {{ rule.priority }}
    location {{ rule.sourcePath }} {
        proxy_pass {{ rule.targetUrl }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        {% if not rule.maintainQueryStrings %}
        proxy_set_header X-Original-URI $request_uri;
        {% endif %}

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    {% endfor %}

    {% if not proxy_rules %}
    # Default location (no proxy rules configured)
    location / {
        return 503 "No proxy rules configured for this domain";
        add_header Content-Type text/plain;
    }
    {% endif %}
}
